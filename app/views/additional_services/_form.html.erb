<%= simple_form_for @service do |f| %>
  <% if @service.errors.any? %>
    <div class="alert alert-danger">
      <h5><%= pluralize(@service.errors.count, "erro") %> impediram o salvamento do servi√ßo adicional:</h5>
      <ul>
        <% @service.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.input :name, label: "Nome", input_html: { class: 'form-control' } %>
  <%= f.input :value, label: "Valor (R$)", input_html: { class: 'form-control', inputmode: 'decimal', placeholder: "Ex: 19.90" } %>

  <div class="d-flex justify-content-between mt-4">
    <%= f.button :submit, class: 'btn btn-success' %>
    <%= link_to 'Voltar', additional_services_path, class: 'btn btn-outline-secondary' %>
  </div>
<% end %>
