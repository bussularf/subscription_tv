<div class="container mt-5">
  <div class="card rounded-4 shadow">
    <div class="card shadow-sm">
      <div class="card-header bg-primary text-white">
        <h3 class="mb-0">Novo Cliente</h3>
      </div>

      <div class="card-body">
        <%= simple_form_for @customer, html: { class: 'needs-validation' } do |f| %>
        
          <% if @customer.errors.any? %>
            <div class="alert alert-danger">
              <h5><%= pluralize(@customer.errors.count, "erro") %> impediram o salvamento do cliente:</h5>
              <ul>
                <% @customer.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= f.input :name, label: "Nome", input_html: { class: 'form-control' } %>
          </div>

          <div class="mb-3">
            <%= f.input :age, label: "Idade", input_html: { class: 'form-control' } %>
          </div>

          <div class="d-flex justify-content-between">
            <%= f.button :submit, 'Criar Cliente', class: 'btn btn-success' %>
            <%= link_to 'Voltar', customers_path, class: 'btn btn-outline-secondary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
