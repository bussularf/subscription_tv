<div class="container mt-4">
  <div class="card rounded-4 shadow">
    <div class="card-header bg-primary text-white rounded-top-4">
      <h3 class="mb-0">Planos</h3>
    </div>

    <div class="card-body p-0">
      <table class="table table-striped table-hover mb-0">
        <thead class="table-dark">
          <tr>
            <th>Nome</th>
            <th>value</th>
            <th style="width: 200px;">Ações</th>
          </tr>
        </thead>

        <tbody>
          <% @plans.each do |plan| %>
            <tr>
              <td><%= plan.name %></td>
              <td><%= plan.value %></td>
              <td>
                <%= link_to 'Show', plan_path(plan), class: 'btn btn-primary btn-sm me-1' %>
                <%= link_to 'Edit', edit_plan_path(plan), class: 'btn btn-secondary btn-sm me-1' %>
                <%= link_to 'Delete', plan_path(plan.id),method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' }, class: 'btn btn-danger btn-sm' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="card-footer text-end">
      <%= link_to 'Novo Plano', new_plan_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>
