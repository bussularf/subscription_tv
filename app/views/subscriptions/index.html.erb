<div class="container mt-4">
  <div class="card rounded-4 shadow">
    <div class="card-header bg-primary text-white rounded-top-4">
      <h3 class="mb-0">Assinaturas</h3>
    </div>

    <div class="card-body p-0">
      <table class="table table-striped table-hover mb-0">
        <thead class="table-dark">
          <tr>
            <th>Cliente</th>
            <th>Valor da Assinatura</th>
            <th style="width: 200px;">Ações</th>
          </tr>
        </thead>

        <tbody>
          <% @subscriptions.each do |subscription| %>
            <tr>
              <td><%= subscription.customer.name %></td>
              <td><%= subscription.value %></td>
              <td>
                <%= link_to 'Show', subscription_path(subscription), class: 'btn btn-primary btn-sm me-1' %>
                <%= link_to 'Edit', edit_subscription_path(subscription), class: 'btn btn-secondary btn-sm me-1' %>
                <%= link_to 'Delete', subscription_path(subscription.id),method: :delete, data: { confirm: 'Tem certeza que deseja excluir?' }, class: 'btn btn-danger btn-sm' %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="card-footer text-end">
      <%= link_to 'Nova Assinatura', new_subscription_path, class: 'btn btn-success' %>
    </div>
  </div>
</div>
